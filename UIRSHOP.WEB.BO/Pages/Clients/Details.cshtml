@page
@model UIRSHOP.WEB.BO.Pages.Clients.DetailsModel
@{
    ViewData["Title"] = "Client Details";
}


<div class="container">

    <div class="row justify-content-center mb-3">
        <div class="col-12">
            <div class="card mx-auto">
                <div class="card-body text-center">
                    <h2>Client Details</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card mx-auto">
                <div class="card-body">
                    <p class="h6 card-description text-primary">
                        Edit client details
                    </p>
                    <form method="post" class="forms-sample">

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">First Name</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" placeholder="edit first name" value="Said">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Last Name</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" placeholder="edit last name" value="Wahid">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Username</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" placeholder="edit username" value="TikTak">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Email</label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control" placeholder="edit email" value="tiktak@tiktak.com">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Phone Number</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" placeholder="edit phone number" value="+212 610203040">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Password</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" placeholder="edit password" value="said1234">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Creation Date</label>
                            <div class="col-sm-9">
                                <input type="datetime" class="form-control" value="@DateTime.Now" readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Address</label>
                            <div class="col-sm-9">
                                <textarea class="form-control" rows="6" placeholder="edit address">Morocco</textarea>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-info mr-2">Update</button>
                        <button type="submit" class="btn btn-danger mr-2">Delete</button>
                        <a asp-page="/Clients/Index" class="btn btn-secondary">Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>