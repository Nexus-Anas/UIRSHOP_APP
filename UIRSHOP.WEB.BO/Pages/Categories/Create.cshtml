@page
@model UIRSHOP.WEB.BO.Pages.Categories.CreateModel
@{
    ViewData["Title"] = "New Category";
}


<div class="container">

    <div class="row justify-content-center mb-3">
        <div class="col-12">
            <div class="card mx-auto">
                <div class="card-body text-center">
                    <h2>New Category</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card mx-auto">
                <div class="card-body">
                    <p class="card-description text-primary">
                        Fill the following fields
                    </p>
                    <form method="post" class="forms-sample">

                        <div class="form-group row">
                            <span asp-validation-for="CategoryDto.Name" class="text text-danger"></span>
                            <label asp-for="CategoryDto.Name" class="col-sm-3 col-form-label">Name</label>
                            <div class="col-sm-9">
                                <input asp-for="CategoryDto.Name" type="text" class="form-control" placeholder="enter category's name">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="CategoryDto.Description" class="col-sm-3 col-form-label">Description</label>
                            <div class="col-sm-9">
                                <textarea asp-for="CategoryDto.Description" class="form-control" rows="6" placeholder="type description"></textarea>
                            </div>
                        </div>

                        <button asp-page-handler="Create" class="btn btn-primary mr-2">Add</button>
                        <button type="reset" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>